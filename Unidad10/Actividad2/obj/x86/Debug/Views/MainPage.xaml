<Page
    x:Class="Actividad2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Actividad2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Actividad2.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <!--xmlns:vm="using:Actividad2.ViewModels" es el namespace donde estan las clases viewModels-->

    <Page.DataContext>
        <!--Para decirle que en la carpeta Actividad2.ViewModels se quiere coger las clases que se pongan dentro-->
        <vm:MainPageVM/>
    </Page.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock x:ConnectionId='2' Name="NombreXAML" Text="Nombre:" Grid.Row="0" Grid.Column="0" Margin="10"></TextBlock>
        <!--Cuando se escribe algo se llama al set, UpdateSourceTrigger=PropertyChanged para que cada vez que se escriba se haga el set en c#-->
        <TextBox x:ConnectionId='3' Name="NombreBoxXAML" Grid.Row="0" Grid.Column="1" Text="{Binding OPersona.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,50"></TextBox>

        <TextBlock Text="Apellidos:" Grid.Row="1" Grid.Column="0" Margin="10"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OPersona.Apellidos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,50"></TextBox>

        <TextBlock Text="Nombre:" Grid.Row="2" Grid.Column="0" Margin="10"></TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1"  Text="{Binding ElementName=NombreBoxXAML, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

    </Grid>
</Page>

