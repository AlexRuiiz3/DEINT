<Page
    x:Class="Actividad3.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Actividad3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    <RelativePanel>
        <StackPanel x:ConnectionId='2' Name="StackButtons" Orientation="Horizontal" Background="LightBlue" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" Width="Auto" Height="Auto">
            <AppBarButton Icon="Add" Label="Añadir"></AppBarButton>
            <AppBarButton Icon="Go" Label="Ir"></AppBarButton>
            <AppBarButton Icon="Globe" Label="Objetivo"></AppBarButton>
            <AppBarButton Icon="Add" Label="Añadir"></AppBarButton>
        </StackPanel>

        <ScrollViewer x:ConnectionId='3' Name="ScrollStackImagenes" VerticalScrollBarVisibility="Visible" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="StackButtons" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" >
            <StackPanel x:ConnectionId='4' Name="StackImagenes" Orientation="Vertical">
                <Rectangle Height="300" Width="Auto" Fill="Red"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Yellow"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Green"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Black"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Orange"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Pink"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Blue"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Maroon"></Rectangle>
                <Rectangle Height="300" Width="Auto" Fill="Gray"></Rectangle>
            </StackPanel>
        </ScrollViewer>
        
    </RelativePanel>
</Page>

