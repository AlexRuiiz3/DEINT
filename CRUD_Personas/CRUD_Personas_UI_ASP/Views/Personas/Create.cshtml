@model CRUD_Personas_UI_ASP.Models.ViewModels.ClsPersonaListaDepartamentosVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h1>Create Persona</h1>
    <h3>Rellene los campos para crear una persona nueva</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Apellidos)

                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Telefono)
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Direccion)

                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input type="file" name="imagen" class="form-control" asp-for="Foto" accept=".png, .jpg">
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input type="date" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" asp-for="FechaNacimiento" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <!--TODO buscar como se hace el select con los helpers de Razor-->
                    <select name="IdDepartamento">
                        @{
                            foreach (CRUD_Personas_Entidades.ClsDepartamento departamento in Model.ListaDepartamentos)
                            {
                                <option value="@departamento.ID">@departamento.Nombre</option>
                            }
                        }
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
