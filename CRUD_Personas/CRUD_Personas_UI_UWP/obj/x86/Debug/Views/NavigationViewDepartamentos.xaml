<Page
    x:Class="CRUD_Personas_UI_UWP.Views.NavigationViewDepartamentos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRUD_Personas_UI_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CRUD_Personas_UI_UWP.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:NavigationViewDepartamentosVM/>
    </Page.DataContext>

    <RelativePanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="AnchoMayorIgual0">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StackBotones.Visibility" Value="Visible"></Setter>
                        <Setter Target="ButtonEditar.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="ButtonGuardar.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="ButtonEliminar.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="ButtonAtras.Visibility" Value="Collapsed"></Setter>

                        <Setter Target="ListaDepartamentos.MaxHeight" Value="90"></Setter>
                        <Setter Target="ListaDepartamentos.(RelativePanel.AlignBottomWithPanel)" Value="False"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="AnchoMayorIgual550">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="550"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ListaDepartamentos.(RelativePanel.AlignBottomWithPanel)" Value="False"></Setter>
                        <Setter Target="ListaDepartamentos.MaxHeight" Value="90"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="AnchoMayorIgual940">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="940"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridDatosDepartamento.(RelativePanel.AlignTopWith)" Value="ListaDepartamentos"></Setter>
                        <Setter Target="GridDatosDepartamento.(RelativePanel.AlignHorizontalCenterWithPanel)" Value="True"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <TextBox x:ConnectionId='5' Name="TextBoxBuscar" Width="200" MinHeight="45" TextWrapping="NoWrap"
                 Text="{Binding TextBoxBuscar,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel MinHeight="40" RelativePanel.RightOf="TextBoxBuscar" RelativePanel.AlignVerticalCenterWith="TextBoxBuscar" Orientation="Horizontal">
            <AppBarButton Icon="Find" Command="{Binding BuscarCommand}"/>
            <AppBarButton Icon="Add" Label="Añadir" Command="{Binding AnhadirCommand}"/>
        </StackPanel>

        <ListView x:ConnectionId='6' Name="ListaDepartamentos" RelativePanel.Below="TextBoxBuscar" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWith="TextBoxBuscar"
                  RelativePanel.AlignBottomWithPanel="True" ItemsSource="{Binding ListaDepartamentosBuscados}" DisplayMemberPath="Nombre"
                  SelectedItem="{Binding DepartamentoSeleccionado,Mode=TwoWay}">
        </ListView>

        <StackPanel x:ConnectionId='7' Name="StackBotones" Orientation="Horizontal" Visibility="Collapsed" RelativePanel.Below="ListaDepartamentos">
            <AppBarButton Command="{Binding EditarCommand}" Icon="Edit" />
            <AppBarButton Command="{Binding GuardarCommand}" Icon="Save" />
            <AppBarButton Command="{Binding EliminarCommand}" Icon="Delete" />
            <AppBarButton Command="{Binding AtrasCommand}" Icon="Cancel"/>
        </StackPanel>

        <Grid x:ConnectionId='8' Name="GridDatosDepartamento" Background="SkyBlue"
                  RelativePanel.Below="StackBotones" BorderBrush="gray" BorderThickness="2" CornerRadius="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5" Text="Nombre: " Visibility="{Binding VisibilidadCampos}"/>
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5" Text="*Nombre: " Visibility="{Binding VisibilidadCamposEditables}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Margin="5,5" Visibility="{Binding VisibilidadCampos}" VerticalAlignment="Center" 
                       Text="{Binding DepartamentoSeleccionado.Nombre}"/>
            <TextBox x:ConnectionId='10' MaxWidth="295" MinWidth="100" Name="TextBoxNombre" Grid.Row="0" Grid.Column="1" Margin="5,5" Visibility="{Binding VisibilidadCamposEditables}" 
                     Text="{Binding DepartamentoSeleccionado.Nombre,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5" Text="Personas del departamento: " Visibility="{Binding VisibilidadCampos}" />
            <ListView x:ConnectionId='11' MaxHeight="50" Grid.Row="1" Grid.Column="1" Name="ComboBox" Visibility="{Binding VisibilidadCampos}" 
                      ItemsSource="{Binding DepartamentoSeleccionado.ListaPersonas}">
                <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Nombre}" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Apellidos}"/>
                    </StackPanel>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <AppBarButton x:ConnectionId='12' Name="ButtonEditar" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Command="{Binding EditarCommand}" Icon="Edit" Label="Editar"/>

            <AppBarButton x:ConnectionId='13' Name="ButtonEliminar" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Command="{Binding EliminarCommand}" Icon="Delete" Label="Eliminar"/>

            <AppBarButton x:ConnectionId='14' Name="ButtonGuardar" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Command="{Binding GuardarCommand}" Icon="Save" Label="Guardar"/>

            <AppBarButton x:ConnectionId='15' Name="ButtonAtras" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Command="{Binding AtrasCommand}" Icon="Back" Label="Atras"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,60,0,0" VerticalAlignment="Bottom" Visibility="{Binding VisibilidadCamposEditables}" Text="* Campos obligatorios" FontSize="10"/>
        </Grid>

        <Border x:ConnectionId='9' Name="TextBlockResultado" Background="LimeGreen" CornerRadius="3" Padding="2"  RelativePanel.Below="GridDatosDepartamento" RelativePanel.AlignHorizontalCenterWith="GridDatosDepartamento" Visibility="{Binding VisibilidadCamposResultados}">
            <TextBlock  Text="Cambios realizados con exito." Foreground="White"></TextBlock>
        </Border>
    </RelativePanel>
</Page>

