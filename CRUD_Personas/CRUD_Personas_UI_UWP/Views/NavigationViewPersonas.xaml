<Page
    x:Class="CRUD_Personas_UI_UWP.Views.NavigationViewPersonas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRUD_Personas_UI_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:CRUD_Personas_UI_UWP.ViewModels"
    xmlns:converters="using:CRUD_Personas_UI_UWP.ViewModels.Utilidades.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:NavigationViewPersonasVM/>
    </Page.DataContext>

    <Page.Resources>
        <converters:ConverterDateTimeSimplificado x:Key="converterDateTimeSimplificado"/>
        <converters:ConverterDateTimeOffSet x:Key="converterDateTimeOffSet"/>
    </Page.Resources>
    
    <RelativePanel>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState x:Name="AnchorMayorIgua0">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="StackBotones.Visibility" Value="Visible"></Setter>
                            <Setter Target="ButtonEditar.Visibility" Value="Collapsed"></Setter>
                            <Setter Target="ButtonGuardar.Visibility" Value="Collapsed"></Setter>
                            <Setter Target="ButtonEliminar.Visibility" Value="Collapsed"></Setter>
                            <Setter Target="ButtonAtras.Visibility" Value="Collapsed"></Setter>

                            <Setter Target="ButtonImagen.(Grid.Row)" Value="6"></Setter>
                            <Setter Target="ButtonImagen.(Grid.Column)" Value="1"></Setter>
                            <Setter Target="ButtonImagen.(Grid.RowSpan)" Value="1"></Setter>

                            <Setter Target="ButtonCambiarImagen.(Grid.Row)" Value="6"></Setter>
                            <Setter Target="ButtonCambiarImagen.(Grid.Column)" Value="0"></Setter>
                            <Setter Target="ButtonCambiarImagen.(Grid.RowSpan)" Value="1"></Setter>

                            <Setter Target="ListaPersonas.MaxHeight" Value="90"></Setter>
                            <Setter Target="ListaPersonas.(RelativePanel.AlignBottomWithPanel)" Value="False"></Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="AnchorMayorIgual550">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="550"></AdaptiveTrigger>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="ListaPersonas.(RelativePanel.AlignBottomWithPanel)" Value="False"></Setter>
                            <Setter Target="ListaPersonas.MaxHeight" Value="90"></Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="AnchorMayorIgual940">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="940"></AdaptiveTrigger>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="GridDatosPersona.(RelativePanel.AlignTopWith)" Value="ListaPersonas"></Setter>
                            <Setter Target="GridDatosPersona.(RelativePanel.AlignHorizontalCenterWithPanel)" Value="True"></Setter>

                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <TextBox Name="TextBoxBuscar" Width="200" MinHeight="45" TextWrapping="NoWrap"
                 Text="{Binding TextBoxBuscar,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

            <StackPanel MinHeight="40" RelativePanel.RightOf="TextBoxBuscar" RelativePanel.AlignVerticalCenterWith="TextBoxBuscar" Orientation="Horizontal">
                <AppBarButton Icon="Find" Command="{Binding BuscarCommand}"/>
                <AppBarButton Icon="Add" Label="Añadir" Command="{Binding AnhadirCommand}"/>
            </StackPanel>

            <ListView Name="ListaPersonas" RelativePanel.Below="TextBoxBuscar" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWith="TextBoxBuscar"
                  MinHeight="80" RelativePanel.AlignBottomWithPanel="True" ItemsSource="{Binding ListaPersonasBuscadas}" 
                  SelectedItem="{Binding PersonaSeleccionada,Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="{Binding Nombre}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Apellidos}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Name="StackBotones" Orientation="Horizontal" Visibility="Collapsed" RelativePanel.Below="ListaPersonas">
                <AppBarButton Command="{Binding EditarCommand}" Icon="Edit" />
                <AppBarButton Command="{Binding GuardarCommand}" Icon="Save" />
                <AppBarButton Command="{Binding EliminarCommand}" Icon="Delete" />
                <AppBarButton Command="{Binding AtrasCommand}" Icon="Cancel"/>
            </StackPanel>

            <Grid Name="GridDatosPersona" Margin="0,5,0,0" Background="SkyBlue"
                  RelativePanel.Below="StackBotones" BorderBrush="gray" BorderThickness="2" CornerRadius="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Nombre-->
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5" Text="Nombre: " Visibility="{Binding VisibilidadCampos}"/>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5" Text="*Nombre: " Visibility="{Binding VisibilidadCamposEditables}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Visibility="{Binding VisibilidadCampos}"
                       VerticalAlignment="Center" Text="{Binding PersonaSeleccionada.Nombre}"/>
                <TextBox MaxWidth="295" Grid.Row="0" Grid.Column="1"  Margin="0,5" Visibility="{Binding VisibilidadCamposEditables}"
                     Text="{Binding PersonaSeleccionada.Nombre,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <!--Apellidos-->
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5" Text="Apellidos: " Visibility="{Binding VisibilidadCampos}"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5" Text="*Apellidos: " Visibility="{Binding VisibilidadCamposEditables}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Visibility="{Binding VisibilidadCampos}" 
                       VerticalAlignment="Center" Text="{Binding PersonaSeleccionada.Apellidos}"></TextBlock>
                <TextBox MaxWidth="295" Grid.Row="1" Grid.Column="1" Margin="0,5" Visibility="{Binding VisibilidadCamposEditables}" 
                     Text="{Binding PersonaSeleccionada.Apellidos,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <!--Telefono-->
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5" Text="Telefono: " Visibility="{Binding VisibilidadCampos}"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5" Text="*Telefono: " Visibility="{Binding VisibilidadCamposEditables}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Visibility="{Binding VisibilidadCampos}" 
                       VerticalAlignment="Center" Text="{Binding PersonaSeleccionada.Telefono}"/>
                <TextBox MaxWidth="295" Grid.Row="2" Grid.Column="1" Margin="0,5" Visibility="{Binding VisibilidadCamposEditables}" 
                     Text="{Binding PersonaSeleccionada.Telefono,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <!--Direccion-->
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5" Text="Direccion: " Visibility="{Binding VisibilidadCampos}"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5" Text="*Direccion: " Visibility="{Binding VisibilidadCamposEditables}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Visibility="{Binding VisibilidadCampos}" 
                       VerticalAlignment="Center" Text="{Binding PersonaSeleccionada.Direccion}"/>
                <TextBox MaxWidth="295" Grid.Row="3" Grid.Column="1" Margin="0,5" Visibility="{Binding VisibilidadCamposEditables}" 
                     Text="{Binding PersonaSeleccionada.Direccion,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                <!--Fecha Nacimiento-->
                <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,5" Text="Fecha nacimiento: "/>
                <TextBlock Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Visibility="{Binding VisibilidadCampos}" 
                       Text="{Binding PersonaSeleccionada.FechaNacimiento,Converter={StaticResource converterDateTimeSimplificado}}"/>
                <DatePicker Grid.Row="4" Grid.Column="1" Margin="0,5" Visibility="{Binding VisibilidadCamposEditables}" SelectedDate="{Binding PersonaSeleccionada.FechaNacimiento,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource converterDateTimeOffSet}}"></DatePicker>

                <!--Departamento-->
                <TextBlock Grid.Row="5" Grid.Column="0" Margin="5,5" Text="Departamento: "/>
                <TextBlock Grid.Row="5" Grid.Column="1" Visibility="{Binding VisibilidadCampos}" 
                       VerticalAlignment="Center"  Text="{Binding PersonaSeleccionada.NombreDepartamento}"></TextBlock>
                <ComboBox Grid.Row="5" Grid.Column="1" Name="ComboBox" Visibility="{Binding VisibilidadCamposEditables}" 
                      ItemsSource="{Binding ListaDepartamentos}"
                      SelectedValuePath="ID"
                      SelectedValue="{Binding PersonaSeleccionada.IdDepartamento,Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nombre}"></TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <AppBarButton Name="ButtonEditar" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" Command="{Binding EditarCommand}" Icon="Edit" Label="Editar"/>

                <AppBarButton Name="ButtonGuardar" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" Command="{Binding GuardarCommand}" Icon="Save" Label="Guardar"/>

                <AppBarButton Name="ButtonEliminar" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" Command="{Binding EliminarCommand}" Icon="Delete" Label="Eliminar"/>

                <AppBarButton Name="ButtonAtras" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Center" Command="{Binding AtrasCommand}" Icon="Back" Label="Atras"/>

                <Button Name="ButtonImagen" Margin="5,0,0,0" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Background="Transparent" Command="{Binding CambiarFotoCommand}">
                    <Image Source="{Binding Imagen,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MaxWidth="100" MaxHeight="100"/>
                </Button>
                <AppBarButton Name="ButtonCambiarImagen" Grid.Row="3" Grid.Column="2" Grid.RowSpan="4" HorizontalAlignment="Center" Visibility="{Binding VisibilidadCamposEditables}"  Command="{Binding CambiarFotoCommand}" Icon="Camera" Label="Cambiar foto"/>
                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Bottom" Visibility="{Binding VisibilidadCamposEditables}" Text="* Campos obligatorios" FontSize="10"/>
            </Grid>

            <Border Background="LimeGreen" CornerRadius="3" Padding="2" Name="TextBlockResultado" RelativePanel.Below="GridDatosPersona" RelativePanel.AlignHorizontalCenterWith="GridDatosPersona" Visibility="{Binding VisibilidadCamposResultados}">
                <TextBlock Text="Cambios realizados con exito." Foreground="White"></TextBlock>
            </Border>
        </RelativePanel>
</Page>
