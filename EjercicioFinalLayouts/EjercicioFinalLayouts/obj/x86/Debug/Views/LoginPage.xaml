<Page
    x:Class="EjercicioFinalLayouts.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EjercicioFinalLayouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer x:ConnectionId='2' Name="scrollViewer" VerticalScrollBarVisibility="Auto">
        <RelativePanel>
            <StackPanel x:ConnectionId='3' Name="stackPanelTop" Background="LightBlue" Orientation="Horizontal" 
                        RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" 
                        RelativePanel.AlignTopWithPanel="True">
                <Image Source="/Assets/Icono.png" MaxWidth="90" MaxHeight="80"/>
                <TextBlock  HorizontalTextAlignment="Center" Text="Solarizr" Foreground="White" FontSize="40" 
                            Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Width="Auto" RelativePanel.Below="stackPanelTop" 
                        RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">

                <TextBlock Text="Sign in" FontSize="35" Margin="5,20"/>
                <TextBlock Text="Sign in with your organizational account" FontSize="20" Margin="5,10,0,50"/>

                <TextBlock Text="Usuario" Margin="5" FontWeight="Bold"></TextBlock>
                <TextBox x:ConnectionId='4' x:Name="txtbUsuarioLogin" MinWidth="470" Margin="5,0,5,0"></TextBox>
                <TextBlock x:ConnectionId='5' x:Name="txtblErrorUsuarioLogin" Text="Nombre de usuario no valido." Foreground="Red"
                           Visibility="Collapsed" Margin="5"></TextBlock>

                <TextBlock Text="Contraseña" Margin="5,15,0,0" FontWeight="Bold"></TextBlock>
                <PasswordBox x:ConnectionId='6' x:Name="pswbContrasenhaLogin" Margin="5,0"/>
                <TextBlock x:ConnectionId='7' x:Name="txtblErrorPasswordLogin" Text="Contraseña no valida." Foreground="Red" 
                           Visibility="Collapsed" Margin="5"></TextBlock>

                <StackPanel Orientation="Horizontal" Margin="5,10">
                    <CheckBox MinWidth="20"></CheckBox>
                    <TextBlock Text="Keep me signed in" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <Button x:ConnectionId='8' Content="Sign in" Margin="5,10"                             ></Button>
                <TextBlock Foreground="Blue" Margin="5,10">
                    <Hyperlink>Can't access your account?</Hyperlink>
                </TextBlock>
            </StackPanel>

        </RelativePanel>
    </ScrollViewer>
</Page>

