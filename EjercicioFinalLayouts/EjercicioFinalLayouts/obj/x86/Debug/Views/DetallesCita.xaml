<Page
    x:Class="EjercicioFinalLayouts.Views.DetallesCita"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <RelativePanel>
            <NavigationView x:ConnectionId='2'                                PaneDisplayMode="Top" IsBackEnabled="True" 
                                                                                                                  
                            RelativePanel.AlignLeftWithPanel="True"  RelativePanel.AlignRightWithPanel="True">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Cita" Icon="Map"/>
                    <NavigationViewItem Content="Fotos" Icon="Camera"/>
                    <NavigationViewItem Content="Anotaciones" Icon="Edit"/>
                </NavigationView.MenuItems>
                <Frame x:ConnectionId='3' x:Name="ContNavigationView"/>
            </NavigationView>
        </RelativePanel>
    </ScrollViewer>
</Page>

